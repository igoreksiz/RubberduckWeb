<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rubberduck - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <script src="~/Scripts/Rubberduck.js" asp-append-version="true"></script> <!-- Styles.Render("~/Scripts/Rubberduck.js") -->
    @Scripts.Render("~/bundles/modernizr")
</head>
<body onmousedown="$hideImage()">
    <div class="navbar">
        <nav class="container">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-sm btn-outline-dark" })</li>
                <li>@Html.ActionLink("Inspections", "List", "Inspections", null, new { @class = "btn btn-sm btn-outline-dark" })</li>
                <li>@Html.ActionLink("Indentation", "Indentation", "Home", null, new { @class = "btn btn-sm btn-outline-dark" })</li>
                <li>@Html.ActionLink("Refactorings", "Refactorings", "Home", null, new { @class = "btn btn-sm btn-outline-dark" })</li>
                <li>@Html.ActionLink("Navigation", "Navigation", "Home", null, new { @class = "btn btn-sm btn-outline-dark" })</li>
                <li>@Html.ActionLink("Unit Testing", "UnitTesting", "Home", null, new { @class = "btn btn-sm btn-outline-dark" })</li>
                <li>@Html.ActionLink("News", "News", "Home", null, new { @class = "btn btn-sm btn-outline-dark" })</li>
                <li>@Html.ActionLink("About", "About", "Home", null, new { @class = "btn btn-sm btn-outline-dark" })</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "btn btn-sm btn-outline-dark" })</li>
            </ul>
        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr/>
        <footer>
            <p><small>Copyright &copy; @DateTime.Now.Year Rubberduck Project Contributors</small></p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
